<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="HREUsergui"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.e4.ui.workbench.swt.E4Application"
            name="org.hre.rcp">
         <property
               name="appName"
               value="org.hre.rcp">
         </property>
         <property
               name="cssTheme"
               value="org.historyresearchenvironment.usergui.theme1">
         </property>
         <property
               name="applicationCSS"
               value="platform:/plugin/org.historyresearchenvironment.usergui/css/default.css">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.e4.ui.css.swt.theme">
      <theme
            basestylesheeturi="css/default.css"
            id="org.historyresearchenvironment.usergui.theme1"
            label="Default Theme">
      </theme>
   </extension>
   <extension
         point="com.opcoach.e4.preferences.e4PreferencePages">
      <page
            class="org.historyresearchenvironment.usergui.preferences.HrePreferencesPage"
            id="org.historyresearchenvironment.usergui.properties"
            name="Properties">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="org.historyresearchenvironment.usergui.preferences.DefaultValuesInitializer">
      </initializer>
   </extension>


</plugin>
